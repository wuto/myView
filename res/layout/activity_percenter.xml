<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.example.myview.percenterview.PercenterView
        android:id="@+id/percenterview"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        custom:bg="@drawable/ic_launcher"
        custom:circleWidth="20dp"
        custom:continuity="false"
        custom:currentCount="5"
        custom:dotCount="20"
        custom:firstCorlor="#ff0000"
        custom:secondCorlor="#0000ff"
        custom:spaceCount="6"
        custom:splitSize="10" >
    </com.example.myview.percenterview.PercenterView>

</RelativeLayout>